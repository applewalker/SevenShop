<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAF0"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <!-- 店家名称 -->

        <TextView
            android:id="@+id/storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:textSize="18sp" />
        <!-- 需要付费的总金额 -->

        <TextView
            android:id="@+id/checkOut_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:textColor="#f9923e"
            android:textSize="15sp" />
        <!-- 商品描述 -->

        <TextView
            android:id="@+id/checkOut_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/storeName"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textSize="15sp" />
        <!-- 商品数量 -->

        <TextView
            android:id="@+id/checkOut_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="#f9923e"
            android:layout_below="@id/checkOut_description" />
        <!-- 商品颜色和尺码 -->

        <TextView
            android:id="@+id/checkout_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkOut_description"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/checkOut_number" />
        <!-- 单件商品的价格 -->

        <TextView
            android:id="@+id/checkOut_singlePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/checkOut_description" />
    </RelativeLayout>

     <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:orientation="vertical" >
        </LinearLayout>

    <EditText
        android:id="@+id/leaveWorld"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:hint="@string/leaveMeassge"
        android:textSize="15sp" />
    
   <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#cccccc"
            android:orientation="vertical" >
        </LinearLayout>

</LinearLayout>