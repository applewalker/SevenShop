<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/address_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:paddingTop="5dp"
            android:text="收货人" />

        <TextView
            android:id="@+id/address_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_receiver"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/linearLayout2"
            android:ems="30"
            android:paddingTop="7dp"
            android:text="收货地址收货地址收货地址收货地址收货地址收货地址收货地址收货地址" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:background="#cccccc"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/address_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/address_address"
            android:layout_alignRight="@+id/address_address"
            android:background="#00000000"
            android:focusable="false"
            android:text=""
            android:textColor="#8f8fcd"
            android:textSize="18dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/address_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp"
        android:background="#00000000"
        android:drawableTop="@drawable/delete_small"
        android:focusable="false"
        android:text="删除"
        android:textSize="10dp" />

</RelativeLayout>